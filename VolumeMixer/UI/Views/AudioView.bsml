<vertical pref-width='65' spacing='-11' child-control-height='false' child-expand-width='true'>
  <horizontal>
    <button text='~muted' ignore-layout='true' pad-left='20' pad-bottom='3' min-width='34' min-height='10' on-click='mute-button-click' active='~active' />
    <dropdown-list-setting id='source-dropdown' align='Left' overflow-mode='Truncate' text='' value='device' options='devices' on-change='device-dropdown-change' apply-on-change='true' />
  </horizontal>
  
  <slider-setting text='Volume' min='0' max='100' increment='1' show-buttons='true' value='volume' on-change='volume-slider-change' apply-on-change='true' bind-value='true' active='~active' />

</vertical>